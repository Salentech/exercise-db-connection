<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - exercise_db_connection</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/exercise_db_connection.styles.css" asp-append-version="true"/>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            overflow-x: hidden;
        }

        #sidebar {
            position: fixed;
            top: 0;
            left: -250px;
            width: 250px;
            height: 100%;
            background-color: #343a40;
            padding-top: 60px;
            transition: 0.3s;
            z-index: 999;
        }

        #sidebar a {
            padding: 8px 8px 8px 32px;
            text-decoration: none;
            font-size: 18px;
            color: #fff;
            display: block;
            transition: 0.3s;
        }

        #sidebar a:hover {
            color: #f1f1f1;
        }

        #sidebar.active {
            left: 0;
        }

        .hamburger-icon {
            font-size: 30px;
            color: #000;
            cursor: pointer;
            position: fixed;
            top: 15px;
            left: 15px;
            z-index: 1000;
        }

        .main-content {
            padding: 20px;
        }

        .container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 20px;
        }

        .navbar {
            display: none;
        }

        .logo-container {
            position: fixed;
            top: 15px;
            right: 15px;
            z-index: 1000;
        }

        .logo-container img {
            height: auto;
        }
    </style>
</head>

<body>
<div class="logo-container">
    <img src="~/Images/logo.svg" alt="exercise_db_connection">
</div>

<div id="sidebar" onmouseleave="closeNav()">
    <a href="@Url.Action("Index", "Home")">Home</a>
    <a href="@Url.Action("Privacy", "Home")">Privacy</a>
    <a href="@Url.Action("Books", "Home")">Books</a>
</div>

<span class="hamburger-icon" onmouseenter="openNav()">&#9776;</span>

<div class="auth-buttons">
    @if (User?.Identity?.IsAuthenticated ?? false)
    {
        <a href="/MicrosoftIdentity/Account/SignOut" class="btn btn-outline-primary">Sign out</a>
    }
    else
    {
        <a href="/MicrosoftIdentity/Account/SignIn" class="btn btn-primary">Sign in</a>
    }
    <style>
        .auth-buttons {
            position: fixed;
            top: 15px;
            right: 15px;
            z-index: 1000;
        }

        .auth-buttons a {
            margin-left: 10px;
            text-decoration: none;
        }
    </style>
</div>



<div id="main-content" class="main-content">
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
</div>

<footer class="border-top footer text-muted">
    <div class="container">
        &copy; 2024 - exercise_db_connection - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
    </div>
</footer>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
<script>
    function openNav() {
        document.getElementById("sidebar").classList.add("active");
    }

    function closeNav() {
        document.getElementById("sidebar").classList.remove("active");
    }
</script>

@await RenderSectionAsync("Scripts", false)
</body>

</html>
